<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CommonText">
        <item name="android:textSize">22dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#00c73c</item>
        <item name="hintTextColor">#00c73c</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/segoe_ui_bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="CommonText.Black">
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">#171f19</item>
        <item name="hintTextColor">#171f19</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/segoe_ui_bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="ButtonColor">
        <item name="color">#00c73c</item>
    </style>

</resources>