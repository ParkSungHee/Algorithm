<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/common_margin_10dp"
    android:background="@drawable/background_gray_line_radius_7dp"
    android:padding="@dimen/common_margin_14dp">

    <TextView
        android:id="@+id/shelter_title"
        style="@style/CommonText.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_margin_14dp"
        android:text="양폭 대피소"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shelter_location"
        style="@style/CommonText.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="강원도 속초시 설악동 산 41"
        android:textAlignment="textStart"
        android:textSize="@dimen/common_margin_13dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/shelter_title"
        app:layout_constraintTop_toBottomOf="@id/shelter_title" />

    <TextView
        android:id="@+id/shelter_location_al"
        style="@style/CommonText.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin_10dp"
        android:text="위도 : 35.123\n경도 : 129.3432\n고도 : 77.0m"
        android:textAlignment="textStart"
        android:textSize="@dimen/common_margin_13dp"
        app:layout_constraintStart_toStartOf="@id/shelter_title"
        app:layout_constraintTop_toBottomOf="@id/shelter_location" />

    <TextView
        android:id="@+id/shelter_tmp"
        style="@style/CommonText.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin_10dp"
        android:layout_marginEnd="10dp"
        android:text="수용인원 : 30\n예약 방법 : 인터넷"
        android:textAlignment="textStart"
        android:textSize="@dimen/common_margin_15dp"
        app:layout_constraintBottom_toBottomOf="@id/shelter_location_al"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>