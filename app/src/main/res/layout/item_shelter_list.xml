<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/common_margin_10dp"
    android:background="@drawable/background_gray_line_radius_7dp"
    android:padding="@dimen/common_margin_14dp">

    <TextView
        android:id="@+id/shelter_title"
        style="@style/CommonText.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_margin_14dp"
        android:text="양폭 대피소"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shelter_location"
        style="@style/CommonText.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="강원도 속초시 설악동 산 41"
        android:textAlignment="textStart"
        android:textSize="@dimen/common_margin_13dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/shelter_title"
        app:layout_constraintTop_toBottomOf="@id/shelter_title" />

    <TextView
        android:id="@+id/shelter_latitude"
        style="@style/CommonText.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="위도 : "
        android:textAlignment="textStart"
        android:textSize="@dimen/common_margin_13dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/shelter_location"
        app:layout_constraintTop_toBottomOf="@id/shelter_location" />

    <TextView
        android:id="@+id/shelter_latitude_pos"
        style="@style/CommonText.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textAlignment="textStart"
        android:textSize="@dimen/common_margin_13dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@id/shelter_latitude"
        app:layout_constraintStart_toEndOf="@id/shelter_latitude" />

    <TextView
        android:id="@+id/shelter_longitude"
        style="@style/CommonText.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="경도 : "
        android:textAlignment="textStart"
        android:textSize="@dimen/common_margin_13dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/shelter_latitude"
        app:layout_constraintTop_toBottomOf="@id/shelter_latitude" />

    <TextView
        android:id="@+id/shelter_longitude_pos"
        style="@style/CommonText.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="강원도 속초시 설악동 산 41"
        android:textAlignment="textStart"
        android:textSize="@dimen/common_margin_13dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@id/shelter_longitude"
        app:layout_constraintStart_toEndOf="@id/shelter_longitude" />

    <TextView
        android:id="@+id/shelter_height"
        style="@style/CommonText.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="높이 : "
        android:textAlignment="textStart"
        android:textSize="@dimen/common_margin_13dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/shelter_longitude"
        app:layout_constraintTop_toBottomOf="@id/shelter_longitude" />

    <TextView
        android:id="@+id/shelter_height_pos"
        style="@style/CommonText.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00m"
        android:textAlignment="textStart"
        android:textSize="@dimen/common_margin_13dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@id/shelter_height"
        app:layout_constraintStart_toEndOf="@id/shelter_height" />

    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shelter_people"
        style="@style/CommonText.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="수용인원 : "
        android:textAlignment="textStart"
        android:textSize="@dimen/common_margin_15dp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@id/view"
        app:layout_constraintTop_toTopOf="@id/shelter_latitude" />

    <TextView
        android:id="@+id/shelter_people_count"
        style="@style/CommonText.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="00"
        android:textAlignment="textStart"
        android:textSize="@dimen/common_margin_15dp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@id/shelter_people"
        app:layout_constraintTop_toTopOf="@id/shelter_latitude" />


</androidx.constraintlayout.widget.ConstraintLayout>